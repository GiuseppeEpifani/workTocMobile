<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <ImageView
        android:id="@+id/imagenUsuarioOpinion"
        android:layout_width="43dp"
        android:layout_height="49dp"
        android:layout_gravity="right|top"
        app:srcCompat="@drawable/ic_menu_gallery" />

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:contentPadding="5dp"
        card_view:cardElevation="4dp"
        card_view:cardMaxElevation="6dp"
        android:layout_margin="6dp"

        >


        <LinearLayout
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NombreUsuarioOpinionTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giuseppe Epifani"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ComentarioOpinionTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aca ira mi super comentario" />

                <TextView
                    android:id="@+id/FechaOpinionTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="1dp"
                    android:text="fecha"
                    android:textSize="10sp"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>