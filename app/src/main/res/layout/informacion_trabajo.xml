<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imagen_cliente"
        android:layout_width="411dp"
        android:layout_height="89dp"
        android:background="#ffffff"
        android:gravity="center"
        android:padding="8dp"
        android:src="@drawable/ic_menu_camera" />


    <TableRow
        android:layout_width="101dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPrecio"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/background_dark"
            android:textSize="24dp"
            android:textStyle="bold" />
    </TableRow>
    <![CDATA[

    />

    ]]>

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text=""
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />
    />

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:text=""
        android:textColor="@android:color/background_dark"
        android:textSize="12sp" />


    <TableRow
        android:layout_width="268dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:text="La Hora de Visita es:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtHora"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text=""
            android:textColor="@android:color/background_dark"
            android:textSize="12sp"
            android:textStyle="bold|italic" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnCerrarperfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="#000"
            android:text="Cerrar"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#000"
            android:text="Aceptar"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TableRow
        android:layout_width="412dp"
        android:layout_height="63dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:textColor="@android:color/background_dark"
            android:text="$"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/txtprecioNegociable"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:focusable="auto"
            android:gravity="center|center_horizontal|center_vertical"
            android:hint="Tu precio"
            android:inputType="textPersonName"
            android:textColorLink="#00000000" />

        <Button
            android:id="@+id/btnNegociar"
            android:layout_width="132dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:background="#000"
            android:text="Deseo Negociar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="italic" />

    </TableRow>

</LinearLayout>
